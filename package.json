{
  "name": "ww2quotesbot",
  "version": "1.0.0",
  "description": "AWS Lambda-based Twitter bot that tweets WW2-related quotes.",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start:dev:random": "LOG_LEVEL=debug lambda-local -l lambda/index.js -h handler -e test/event-data/randomtweet.js",
    "start:dev:specific": "LOG_LEVEL=debug lambda-local -l lambda/index.js -h handler -e test/event-data/specifictweet.js",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "test": "DISABLE_LOGGING=1 ./node_modules/.bin/mocha --recursive test/",
    "build": "bash scripts/build.sh",
    "deploy:lambda": "bash scripts/deploy_lambda_function.sh",
    "deploy:cloudformation": "aws cloudformation deploy --stack-name ww2twitterbot --template-file cloudformation.yml --capabilities CAPABILITY_NAMED_IAM",
    "deploy:all": "npm run-script deploy:lambda && npm run-script deploy:cloudformation"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "twitter-lite": "^0.10.1-0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "aws-sdk": "^2.675.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "serverless": "^1.68.0",
    "sinon": "^9.0.2"
  }
}
